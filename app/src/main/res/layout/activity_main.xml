<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:padding="8dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/idTvCommentBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorBlack" />

    <View
        android:id="@+id/idVTopBorder"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@id/idRvUserNameRecycler"
        android:background="@color/colorWhite" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRvUserNameRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/idLlCommentSection" />

    <LinearLayout
        android:id="@+id/idLlCommentSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/idEtEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:imeOptions="actionSend"
            android:singleLine="true" />

        <Button
            android:id="@+id/idBtSendButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/colorWhite"
            android:text="Send"
            android:textAllCaps="false"
            android:textColor="@color/colorGreen" />


    </LinearLayout>


</RelativeLayout>